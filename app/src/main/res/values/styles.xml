<?xml version="1.0" encoding="utf-8"?>
<resources>
	
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimaryDark">@color/black</item>
		<item name="colorPrimary">@color/orange</item>
		<item name="colorAccent">@color/orange</item>
		
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:actionBarStyle">@style/myActionBar</item>
		<item name="android:actionModeStyle">@style/myActionMode</item>
		<item name="android:actionMenuTextColor">@color/white</item>

		<item name="actionBarStyle">@style/myActionBar</item>
		<item name="actionModeStyle">@style/myActionMode</item>
		<item name="actionMenuTextColor">@color/white</item>
		<item name="drawerArrowStyle">@style/myDrawerArrowStyle</item>

		<item name="windowActionModeOverlay">true</item>

		<item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
	</style>

	<style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:background">@color/orange</item>
		<item name="android:textColorPrimary">@color/white</item>
		<item name="android:textColorSecondary">@color/white</item>
	</style>

	<style name="myActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
		<item name="android:background">@color/orange</item>
		<item name="android:titleTextStyle">@style/myTitle</item>

		<item name="background">@color/orange</item>
		<item name="titleTextStyle">@style/myTitle</item>
	</style>

	<style name="myActionMode" parent="@style/Widget.AppCompat.ActionMode">
		<item name="android:background">@color/orange</item>
		<item name="android:titleTextStyle">@style/myTitle</item>

		<item name="background">@color/orange</item>
		<item name="titleTextStyle">@style/myTitle</item>
	</style>

	<style name="myDrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
		<item name="spinBars">true</item>
		<item name="color">@color/white</item>
	</style>

	<style name="myTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="myTabText" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
		<item name="android:textColor">@color/black</item>
	</style>


	<!-- Text Appearance -->

	<style name="myMarqueeText">
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:focusable">true</item>
		<item name="android:focusableInTouchMode">true</item>
		<item name="android:marqueeRepeatLimit">marquee_forever</item>
		<item name="android:scrollHorizontally">true</item>
	</style>

	<style name="myEllipsizeEndText">
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>
	
	<style name="myListText">
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textSize">@dimen/text_medium</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:paddingRight">@dimen/margin_tiny</item>
		<item name="android:paddingLeft">@dimen/margin_tiny</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	
	<style name="myListDetailText">
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textSize">@dimen/text_small</item>
		<item name="android:textColor">@color/gray_dark</item>
		<item name="android:paddingRight">@dimen/margin_tiny</item>
		<item name="android:paddingLeft">@dimen/margin_tiny</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	
	
	<style name="myMainText">
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:focusable">true</item>
		<item name="android:focusableInTouchMode">true</item>
		<item name="android:marqueeRepeatLimit">2</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:textSize">@dimen/text_huge</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	
	<style name="mySubText">
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textSize">@dimen/text_micro</item>
		<item name="android:textColor">@color/gray_dark</item>
		<item name="android:gravity">center_vertical</item>
	</style>
	
	
	<!-- View -->
	
	<style name="myListItem">
		<item name="android:layout_height">@dimen/list_item_height</item>
		<item name="android:minHeight">@dimen/list_item_height</item>
		<item name="android:descendantFocusability">blocksDescendants</item>
		<item name="android:background">@drawable/listitem_background</item>
	</style>
	
	<style name="myButton" parent="@android:style/Widget.Button">
		<item name="android:background">@drawable/button_background</item>
	</style>
	
	<style name="mySeekBar" parent="@style/Widget.AppCompat.SeekBar">
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:indeterminateOnly">false</item>
		<item name="android:progressDrawable">@drawable/seekbar_progress_layer</item>
		<item name="android:indeterminateDrawable">@drawable/seekbar_progress_layer</item>
		<item name="android:minHeight">12dp</item>
		<item name="android:maxHeight">12dp</item>
		<item name="android:thumb">@drawable/seekbar_thumb</item>
		<item name="android:thumbOffset">16dp</item>
		<item name="android:focusable">true</item>
		<item name="android:paddingLeft">16dp</item>
		<item name="android:paddingRight">16dp</item>
	</style>
	
</resources>
