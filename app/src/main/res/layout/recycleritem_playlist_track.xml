<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/myListItem"
	android:layout_width="match_parent"
	android:gravity="center_vertical"
	android:orientation="vertical"
	android:background="@color/white">

	<ImageView
		android:id="@+id/handle_view"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:src="@drawable/ic_drag_handle_white_24"
		android:tint="@color/gray"
		android:paddingLeft="@dimen/spacing_small"
		android:paddingRight="@dimen/spacing_small"/>

	<TextView
		style="@style/myListText"
		android:id="@+id/title_view"
		android:layout_height="@dimen/view_tiny"
		android:layout_width="match_parent"
		android:layout_toRightOf="@id/handle_view"/>

	<TextView
		style="@style/myListDetailText"
		android:id="@+id/artist_view"
		android:layout_height="@dimen/view_tiny"
		android:layout_width="match_parent"
		android:layout_below="@id/title_view"
		android:layout_toRightOf="@id/handle_view"
		android:layout_toLeftOf="@+id/duration_view"/>

	<TextView
		style="@style/myListDetailText"
		android:id="@+id/duration_view"
		android:layout_height="@dimen/view_tiny"
		android:layout_width="wrap_content"
		android:layout_below="@id/title_view"
		android:layout_alignParentRight="true"/>
	
</RelativeLayout>
