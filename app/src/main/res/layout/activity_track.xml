<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/black"
	android:fitsSystemWindows="true">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:padding="@dimen/margin_tiny"
		android:gravity="center_vertical"
		android:orientation="vertical"
		android:background="@drawable/grad_black_graydark">

		<TextView
			style="@style/myEllipsizeEndText"
			android:id="@+id/artist"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="@dimen/text_small"
			android:textColor="@color/gray_light"
			android:gravity="center"/>

		<TextView
			style="@style/myMarqueeText"
			android:id="@+id/track"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="@dimen/text_huge"
			android:textColor="@color/white"
			android:gravity="center"/>

		<TextView
			style="@style/myEllipsizeEndText"
			android:id="@+id/album"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="@dimen/text_small"
			android:textColor="@color/gray_light"
			android:gravity="center"/>

	</LinearLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.citrus.suzaku.SquareImageButton
			android:id="@+id/artwork"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:scaleType="fitCenter"
			custom:adjust="height" />

		<RelativeLayout
			android:id="@+id/panel"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@id/artwork"
			android:layout_alignTop="@id/artwork"
			android:background="@color/black_alpha"
			android:visibility="gone">

			<ScrollView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_alignParentTop="true"
				android:layout_above="@+id/buttons"
				android:fillViewport="true">

				<TextView
					android:id="@+id/lyrics"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:padding="@dimen/margin_small"
					android:textColor="@color/white"
					android:textSize="@dimen/text_small" />

			</ScrollView>

			<LinearLayout
				android:id="@id/buttons"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentBottom="true"
				android:orientation="horizontal">

				<Button
					style="@style/myButton"
					android:id="@+id/playlistButton"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:padding="@dimen/margin_small"
					android:drawableLeft="@drawable/ic_queue_music"
					android:text="@string/playlist"
					android:textColor="@color/white"/>

				<Button
					style="@style/myButton"
					android:id="@+id/detailButton"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:padding="@dimen/margin_small"
					android:drawableLeft="@drawable/ic_edit"
					android:text="@string/detail"
					android:textColor="@color/white"/>

			</LinearLayout>

		</RelativeLayout>

		<ListView
			android:id="@+id/playlist"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@id/artwork"
			android:layout_alignTop="@id/artwork"
			android:background="@color/black_alpha"
			android:listSelector="@android:color/transparent"
			android:visibility="gone" />

	</RelativeLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical"
		android:background="@drawable/grad_graydark_black">

		<SeekBar
			style="@style/mySeekBar"
			android:id="@+id/durationBar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:progress="0"/>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<Chronometer
				android:id="@+id/chronometer"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:paddingLeft="@dimen/margin_tiny"
				android:textSize="@dimen/text_micro"
				android:textColor="@color/gray"/>

			<TextView
				android:id="@+id/number"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:paddingRight="@dimen/margin_tiny"
				android:textSize="@dimen/text_micro"
				android:textColor="@color/gray"/>

		</RelativeLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:padding="@dimen/margin_tiny"
			android:orientation="horizontal"
			android:gravity="center">

			<ImageButton
				style="@style/myButton"
				android:id="@+id/loopButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingTop="@dimen/margin_small"
				android:paddingBottom="@dimen/margin_small"/>

			<ImageButton
				style="@style/myButton"
				android:id="@+id/prevButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingTop="@dimen/margin_small"
				android:paddingBottom="@dimen/margin_small"
				android:src="@drawable/ic_skip_prev"/>

			<ImageButton
				style="@style/myButton"
				android:id="@+id/playButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingTop="@dimen/margin_small"
				android:paddingBottom="@dimen/margin_small"/>

			<ImageButton
				style="@style/myButton"
				android:id="@+id/nextButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingTop="@dimen/margin_small"
				android:paddingBottom="@dimen/margin_small"
				android:src="@drawable/ic_skip_next"/>

			<ImageButton
				style="@style/myButton"
				android:id="@+id/shuffleButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingTop="@dimen/margin_small"
				android:paddingBottom="@dimen/margin_small"
				android:src="@drawable/ic_shuffle"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>
