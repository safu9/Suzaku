<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
	android:background="@color/white">

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/margin_small"
			android:orientation="vertical">

			<TextView
				android:id="@+id/titleLabel"
				android:text="@string/title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"/>

			<EditText
				android:id="@+id/title"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"
				android:inputType="text"/>

			<TextView
				android:text="@string/artist"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"/>

			<EditText
				android:id="@+id/artist"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"
				android:inputType="text"/>

			<TextView
				android:text="@string/album"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"/>

			<EditText
				android:id="@+id/album"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"
				android:inputType="text"/>

			<TextView
				android:text="@string/album_artist"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"/>

			<EditText
				android:id="@+id/album_artist"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"
				android:inputType="text"/>

			<TextView
				android:text="@string/composer"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"/>

			<EditText
				android:id="@+id/composer"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"
				android:inputType="text"/>

			<TextView
				android:text="@string/genre"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"/>

			<EditText
				android:id="@+id/genre"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"
				android:inputType="text"/>

			<TextView
				android:text="@string/track_no"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<EditText
					android:id="@+id/track_num"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/text_small"
					android:textColor="@color/black"
					android:ems="4"
					android:inputType="number"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/text_small"
					android:textColor="@color/black"
					android:text="/"/>

				<EditText
					android:id="@+id/track_count"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/text_small"
					android:textColor="@color/black"
					android:ems="4"
					android:inputType="number"/>
			</LinearLayout>

			<TextView
				android:text="@string/disc_no"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<EditText
					android:id="@+id/disc_num"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/text_small"
					android:textColor="@color/black"
					android:ems="4"
					android:inputType="number"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/text_small"
					android:textColor="@color/black"
					android:text="/"/>

				<EditText
					android:id="@+id/disc_count"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textSize="@dimen/text_small"
					android:textColor="@color/black"
					android:ems="4"
					android:inputType="number"/>
			</LinearLayout>

			<TextView
				android:text="@string/year"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"/>

			<EditText
				android:id="@+id/year"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"
				android:inputType="number"/>

			<TextView
				android:text="@string/comment"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"/>

			<EditText
				android:id="@+id/comment"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"/>

			<CheckBox
				android:id="@+id/compilation"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="@string/compilation"
				android:textSize="@dimen/text_small"
				android:textColor="@color/black"/>

		</LinearLayout>
	</ScrollView>

	<View
		android:layout_width="match_parent"
		android:layout_height="2dp"
		android:background="@drawable/shadow_bottom"/>

</FrameLayout>
